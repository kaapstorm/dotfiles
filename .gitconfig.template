[user]
    email = USERNAME@EXAMPLE.COM
    name = YOUR NAME
    signingkey = ABCD1234
[push]
    default = simple
[core]
    excludesfile = /home/USERNAME/.gitignore_global
[commit]
    gpgSign = true
[init]
    defaultBranch = main
[diff]
    colorMoved = default
    colorMovedWs = ignore-all-space
[alias]
    trim = "!git remote prune origin && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
